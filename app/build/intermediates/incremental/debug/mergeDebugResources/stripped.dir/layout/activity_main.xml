<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme" >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:layout_marginTop="30dp"
            android:theme="@style/toolbarStyle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SoundSafe"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:textStyle="bold"
                android:textSize="24sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/rounded_background"
        android:textColor="@color/white"
        android:layout_marginTop="32dp">
        <ImageView
            android:id="@+id/redTrafficLightImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/red_light_circle"
            android:layout_gravity="center"
            android:gravity="center" />

        <ImageView
            android:id="@+id/yellowTrafficLightImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/yellow_light_circle"
            android:layout_gravity="center"
            android:gravity="center" />

        <ImageView
            android:id="@+id/greenTrafficLightImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/green_light_circle"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/volume_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center|bottom"
        android:textColor="@color/black"
        android:background="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recommendations"
        android:text="Recommendations!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_gravity="center|bottom"
        android:textColor="@android:color/black"
        android:background="@color/white" />

    <TextView
        android:id="@+id/advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:background="@color/white"
        android:padding="16dp"
        android:text="Advice!"
        android:textColor="@android:color/black" />

</LinearLayout>